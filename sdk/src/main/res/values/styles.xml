<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TxAppTheme" parent="Theme.AppCompat.Light">

    </style>

    <style name="TxAppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <!-- 透明主题 -->
    <style name="TxAppTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>


    <!-- Text设计规范 -->
    <style name="t_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- SP_14 -->
    <style name="text_14sp" parent="t_parent">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/text_c</item>
    </style>

    <style name="text_14sp_gray" parent="t_parent">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/text_second</item>
    </style>

    <!-- SP_16 -->
    <style name="text_16sp" parent="t_parent">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/text_c</item>
    </style>

    <style name="text_16sp_gray" parent="t_parent">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/text_second</item>
    </style>

    <!-- SP_18 -->
    <style name="text_18sp" parent="t_parent">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/text_c</item>
    </style>

    <style name="text_18sp_gray" parent="t_parent">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/text_second</item>
    </style>


    <!-- TextView样式 -->
    <style name="text_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_normal" parent="@style/text_wrap">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_c</item>
    </style>

    <style name="text_large" parent="@style/text_wrap">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_c</item>
    </style>


    <!-- 水平线条的样式 -->
    <style name="line_horizontal">
        <item name="android:layout_height">2px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_c</item>
    </style>

    <!-- 垂直线条的样式 -->
    <style name="line_vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
        <item name="android:background">@color/line_c</item>
    </style>


    <!-- 底部渐入渐出动画 -->
    <style name="TxAnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/share_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/share_bottom_out</item>
    </style>

    <!-- 圆角风格的DIALOG -->
    <style name="dialog_circle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/tx_shape_bg_circle</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>